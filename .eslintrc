{
  "extends": [
    "prettier"
  ],
  "plugins": [
    "react",
    "prettier",
    "import"
  ],
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    },
  },
  "parser": "babel-eslint",
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "jsxBracketSameLine": true,
      "parser": "flow",
    }]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
